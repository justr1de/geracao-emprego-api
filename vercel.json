{
  "version": 2,
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/auth/:path*", "destination": "/api/auth/:path*" },
    { "source": "/api/vagas/:path*", "destination": "/api/vagas/:path*" },
    { "source": "/api/empresas/:path*", "destination": "/api/empresas/:path*" },
    { "source": "/api/cursos/:path*", "destination": "/api/cursos/:path*" },
    { "source": "/api/curriculos/:path*", "destination": "/api/curriculos/:path*" },
    { "source": "/api/editais/:path*", "destination": "/api/editais/:path*" },
    { "source": "/api/metadata/:path*", "destination": "/api/metadata/:path*" },
    { "source": "/api/sobre/:path*", "destination": "/api/sobre/:path*" }
  ]
}
